        * {
            margin: 0;
            padding: 0;
            font-family: 'Titillium Web', sans-serif;
        }
        a {
            text-decoration: none;
            color: whitesmoke;
        }
        body {
            background-color: rgb(42, 42, 54); 
        }
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 80px;
            display: inline-flex;
            align-items: center;
            justify-content: space-between;
            background-color: rgb(28, 28, 43);
            padding-right: 50px;
            box-shadow: 0 8px 6px -6px black;
            z-index: 1;

        }
        header .logo {
            position: relative;
            font-size: 2em;
            text-decoration: none;
            text-align: center;
            letter-spacing: 0.2%;
            padding-left: 2%;
            padding-right: 0.2%;
            color: whitesmoke;
            margin-right: 1%;
        }
        header input {
            padding: 10px;
            width: 33%;
            height: 40px;
            outline: 0;
            background-color: rgb(42, 42, 54);
            border: none;
            font-size: 1.2em;
            color: whitesmoke;

        }
        header input:focus {
            outline: 0;
        }
        header ul {
            position: absolute;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            list-style: none;
            right: 5.7%;
        
        }
        header ul li {
            position: relative;
            display: block;
            margin-top: 0px;
            margin-left: 4vw;
            font-size: 1.2rem;
            transition: 0.4s;
        }
        header ul li a {
            text-align: center;
            align-items: center;
            justify-content: center;
            display: block;
            padding-left: 10px;
            padding-right: 10px;
            
        }
        header ul li a:hover {
            cursor: pointer;
            color: rgb(28, 28, 43);
            background-color: whitesmoke;
        }
        
    
        
        section {
            display: flex;
            flex-direction: column;
            margin-top: 80px;
            width: 100%;
            min-height: 100%;
            color: whitesmoke;
        }

        #search {
            height: 20px;
            width: 80%;
            
        }
        #searchbar {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 40px;
            width: 32%;
        }
        #button {
            position: absolute;
            right: 9%;
            width: 10%;
            height: 40px;
            background-color: rgb(42, 42, 54);
            border: none;
            outline: none;
        }
        #button:hover {
            cursor: pointer;
        }
